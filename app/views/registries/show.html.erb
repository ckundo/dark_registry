<p id="notice"><%= notice %></p>

<h1><%= @registry.title %></h1>

<ol>
  <% @registry.gifts.each do |gift| %>
    <li>
      <p><%= link_to gift.url, gift.url %></p>
      <p><%= gift.description %></p>
    </li>
  <% end %>
</ol>

<% if current_user.registry == @registry %>
  <%= form_for @registry do |f| %>
      <%= f.fields_for :gifts, @gift do |gifts_form| %>
        <%= gifts_form.label :url, "Crypto Market Url" %>
        <%= gifts_form.url_field :url %>
      <% end %>
    <%= f.submit "Add to registry" %>
  <% end %>
<% end %>
